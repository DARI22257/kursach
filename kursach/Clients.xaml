<Window x:Class="kursach.Clients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursach"
        xmlns:mvvm="clr-namespace:kursach.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="Clients" Height="450" Width="800">
    <Window.Resources>
        <mvvm:ClientsMvvm x:Key="vm"/>
    </Window.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10" DataContext="{Binding NewClient}">
            <Label Content="ФИО"/>
            <TextBox Text="{Binding FullName}"/>
            <Label Content="Номер телефона"/>
            <TextBox Text="{Binding Phone}"/>
            <Label Content="Email"/>
            <TextBox Text="{Binding Email}"/>
            <Label Content="Заметки"/>
            <TextBox Text="{Binding Notes}"/>
        </StackPanel>

        
        <ListView Grid.Column="1" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}" Width="100"/>
                    <GridViewColumn Header="Номер телефона" DisplayMemberBinding="{Binding Phone}" Width="100"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="100"/>
                    <GridViewColumn Header="Заметки" DisplayMemberBinding="{Binding Notes}"/>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="kjk"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Добавить клиента" Command="{Binding InsertClient}" Width="150" Height="40" />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Далее" Width="100" Height="40" Command="{Binding NextPage}" />
        </StackPanel>
    </Grid>
</Window>
